<header class="border-bottom">
  <nav class="navbar navbar-expand-lg container-fluid navbar-light">
    <h1 class="navbar-brand m-0"><a class="nav-link" href="/">Illusion</a></h1>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbar"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse fw-bold" id="navbar">
      <ul class="navbar-nav ms-auto">

          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %> 

          <% if (user) { %>
            <li class="navbar-text fw-bolder"><%= user.name %></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Log out</a></li>
          <% } %> 

        </ul>
      </div>

  </nav>
</header>
